{
	"semi": true,
	"trailingComma": "es5",
	"singleQuote": true,
	"printWidth": 100,
	"tabWidth": 2,
	"useTabs": true,
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "avoid",
	"endOfLine": "lf",
	"quoteProps": "as-needed",
	"jsxSingleQuote": false,
	"overrides": [
		{
			"files": "*.json",
			"options": {
				"singleQuote": false,
				"useTabs": true,
				"tabWidth": 2
			}
		}
	]
}
